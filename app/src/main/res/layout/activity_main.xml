<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.abtion.taskgo.mvp.view.MainActivity">


    <FrameLayout
        android:id="@+id/frame_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_divider">

    </FrameLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@id/ly_bottom_menu"
        android:background="@color/line_bottom_tab" />


    <LinearLayout
        android:id="@+id/ly_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:background="@color/bg_bottom_tab">


        <LinearLayout
            android:id="@+id/ly_menu_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/img_tab_home"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tab_home_selector" />

            <TextView
                android:id="@+id/txt_tab_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_menu_selector"
                android:text="主页"
                android:textSize="10sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_menu_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_message"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tab_message_selector" />

            <TextView
                android:id="@+id/txt_tab_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_menu_selector"
                android:text="消息"
                android:textSize="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_menu_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_tab_mine"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/tab_mine_selector" />

            <TextView
                android:id="@+id/txt_tab_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/txt_menu_selector"
                android:text="我的"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
