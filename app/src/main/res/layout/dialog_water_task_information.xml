        <TextView
            android:id="@+id/btn_information_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/txt_remark_information"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_task_btn_blue"
