<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">


    <LinearLayout
        android:id="@+id/ly_avatar"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="11dp"/>

        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_avatar"
            android:text="N/A"
            android:textColor="@color/txt_gray"
            android:textSize="10sp" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ly_avatar"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txt_main_title_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/txt_main_title"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/txt_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/txt_main_title_value"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <TextView
        android:id="@+id/txt_fix_release_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/txt_main_title"
        android:layout_below="@id/txt_main_title"
        android:layout_marginTop="5dp"
        android:text="@string/txt_release_time"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_release_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txt_fix_release_time"
        android:layout_toRightOf="@id/txt_fix_release_time"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/btn_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_accept_btn"
        android:paddingBottom="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="4dp"
        android:textColor="@color/txt_blue"
        android:textSize="12sp" />

</RelativeLayout>
