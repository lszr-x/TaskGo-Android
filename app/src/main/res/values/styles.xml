<resources>

    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--设置Toolbar返回按钮的颜色-->
        <item name="colorControlNormal">@color/primary</item>

    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <!--toolbar style-->
    <style name="toolbar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:paddingTop">25dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>


    <!--home模块-->

    <style name="txt_home_task_type">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="txt_fix_task_information">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/txt_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="txt_selector_task_type">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <!--底部弹窗-->

    <!--item样式-->
    <style name="dialog_add_photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--弹窗样式-->
    <style name="dialog_bottom">
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/dialog_bottom_anim</item>
    </style>

    <!--底部弹窗动画-->
    <style name="dialog_bottom_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_out</item>
    </style>


</resources>
